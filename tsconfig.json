{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "rootDir": ".",           // نأخذ ملفات TS من جذر المشروع
    "outDir": "./dist",       // ونصنع مجلد dist في جذر المشروع
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
  },
  "include": [
    "app.ts",       // نبني هذا الملف من جذر المشروع
    "src/**/*"      // وكل ما في src/
  ],
  "exclude": ["node_modules", "dist"]
}
